<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Modern Star Trek Colors - Cyan/Blue Primary -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#00D4FF"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#4DE3FF"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#00A8CC"/>
    <SolidColorBrush x:Key="Primary50" Color="#E0F7FA"/>
    <SolidColorBrush x:Key="Primary100" Color="#B2EBF2"/>
    <SolidColorBrush x:Key="Primary200" Color="#80DEEA"/>
    <SolidColorBrush x:Key="Primary300" Color="#4DD0E1"/>
    <SolidColorBrush x:Key="Primary400" Color="#26C6DA"/>
    <SolidColorBrush x:Key="Primary500" Color="#00BCD4"/>
    <SolidColorBrush x:Key="Primary600" Color="#00ACC1"/>
    <SolidColorBrush x:Key="Primary700" Color="#0097A7"/>
    <SolidColorBrush x:Key="Primary800" Color="#00838F"/>
    <SolidColorBrush x:Key="Primary900" Color="#006064"/>

    <!-- Modern Star Trek Colors - Electric Blue Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#00E5FF"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="#66F0FF"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#00B8CC"/>
    <SolidColorBrush x:Key="AccentA100" Color="#80F5FF"/>
    <SolidColorBrush x:Key="AccentA200" Color="#4DF5FF"/>
    <SolidColorBrush x:Key="AccentA400" Color="#1AE5FF"/>
    <SolidColorBrush x:Key="AccentA700" Color="#00CCE5"/>

    <!-- Modern Star Trek Colors - Deep Space Backgrounds -->
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#0A0E27"/>
    <SolidColorBrush x:Key="DarkSurfaceBrush" Color="#141B2E"/>
    <SolidColorBrush x:Key="DarkCardBrush" Color="#1A2332"/>
    <SolidColorBrush x:Key="DarkInputBrush" Color="#252F3F"/>

    <!-- Modern Star Trek Colors - Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E0F7FF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#80C4D4"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#4A5A6A"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="#5A6A7A"/>
    
    <!-- Selection Colors for Dark Theme -->
    <SolidColorBrush x:Key="SelectionBrush" Color="#00D4FF"/> <!-- Primary - cyan glow -->
    <SolidColorBrush x:Key="SelectionTextBrush" Color="#0A0E27"/> <!-- Dark text on cyan selection -->

    <!-- Modern Star Trek Colors - Status Indicators -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#FF3366"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFAA00"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#00FF88"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#00D4FF"/>

    <!-- Material Design Shadows -->
    <DropShadowEffect x:Key="MaterialDesignShadowDepth1" Color="#000000" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.2"/>
    <DropShadowEffect x:Key="MaterialDesignShadowDepth2" Color="#000000" Direction="270" ShadowDepth="3" BlurRadius="6" Opacity="0.25"/>
    <DropShadowEffect x:Key="MaterialDesignShadowDepth3" Color="#000000" Direction="270" ShadowDepth="5" BlurRadius="10" Opacity="0.3"/>
    <DropShadowEffect x:Key="MaterialDesignShadowDepth4" Color="#000000" Direction="270" ShadowDepth="8" BlurRadius="15" Opacity="0.35"/>
    <DropShadowEffect x:Key="MaterialDesignShadowDepth5" Color="#000000" Direction="270" ShadowDepth="12" BlurRadius="20" Opacity="0.4"/>
    <DropShadowEffect x:Key="MaterialDesignShadowDepth6" Color="#000000" Direction="270" ShadowDepth="16" BlurRadius="25" Opacity="0.45"/>

    <!-- Material Design Typography -->
    <Style x:Key="MaterialDesignHeadline1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="96"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignHeadline2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="60"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignHeadline3" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignHeadline4" TargetType="TextBlock">
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignHeadline5" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignHeadline6" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignSubtitle1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignSubtitle2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignBody1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignBody2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignButton" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignCaption" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>

    <Style x:Key="MaterialDesignOverline" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>

    </Style>

</ResourceDictionary>
