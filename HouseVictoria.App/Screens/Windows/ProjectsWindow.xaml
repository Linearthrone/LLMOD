<Window x:Class="HouseVictoria.App.Screens.Windows.ProjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HouseVictoria.App.Converters"
        mc:Ignorable="d"
        Title="Projects Board" Height="900" Width="1400"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3000D4FF" Padding="15,10" CornerRadius="6,6,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <TextBlock Text="[Target] Projects &amp; Goals" FontSize="20" FontWeight="Bold" Foreground="#E0F7FF"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Content="âˆ’" 
                               Width="30" Height="30" 
                               Background="#4000D4FF" 
                               BorderThickness="0"
                               FontSize="18" FontWeight="Bold"
                               Foreground="#E0F7FF"
                               Cursor="Hand"
                               Margin="0,0,5,0"
                               Click="MinimizeButton_Click"
                               ToolTip="Minimize to Tray">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6000D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•" 
                               Width="30" Height="30" 
                               Background="#40FF3366" 
                               BorderThickness="0"
                               FontSize="16" FontWeight="Bold"
                               Foreground="#E0F7FF"
                               Cursor="Hand"
                               Click="CloseButton_Click"
                               ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#60FF3366"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Toolbar: Create Button and Filters -->
            <Border Grid.Row="1" Background="#300A0E27" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Filters and Sort -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Filter:" VerticalAlignment="Center" Foreground="#E0F7FF" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding FilterTypes}" SelectedItem="{Binding SelectedFilterType}" 
                                 DisplayMemberPath="Name" SelectedValuePath="Value"
                                 Width="150" Margin="0,0,10,0" 
                                 Background="#252F3F" Foreground="#E0F7FF" BorderBrush="#4000D4FF"/>
                        <ComboBox ItemsSource="{Binding FilterPhases}" SelectedItem="{Binding SelectedFilterPhase}" 
                                 DisplayMemberPath="Name" SelectedValuePath="Value"
                                 Width="150" Margin="0,0,10,0" 
                                 Background="#252F3F" Foreground="#E0F7FF" BorderBrush="#4000D4FF"/>
                        <ComboBox ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}" 
                                 DisplayMemberPath="Name" SelectedValuePath="Value"
                                 Width="180" Margin="0,0,10,0" 
                                 Background="#252F3F" Foreground="#E0F7FF" BorderBrush="#4000D4FF"/>
                        <Button Content="ðŸ”„ Refresh" Style="{StaticResource GlassButton}" 
                               Command="{Binding RefreshCommand}" Width="100"/>
                    </StackPanel>
                    
                    <!-- Create Button -->
                    <Button Grid.Column="1" 
                           Style="{StaticResource GlassButton}"
                           Content="+ Create New Goal/Project"
                           Command="{Binding CreateProjectCommand}"/>
                </Grid>
            </Border>

            <!-- Projects Board -->
            <Border Grid.Row="2" Padding="10">
                <ItemsControl ItemsSource="{Binding FilteredProjects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource Card}" Margin="0,5" Cursor="Hand"
                                   Tag="{Binding Id, FallbackValue=''}"
                                   MouseLeftButtonDown="ProjectCard_MouseLeftButtonDown">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Priority Indicator -->
                                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25"
                                           Background="{Binding PriorityColor, FallbackValue=#888888}"
                                           VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Priority, FallbackValue=5}" FontSize="20" 
                                                   FontWeight="Bold" Foreground="#E0F7FF"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Project Info -->
                                    <StackPanel Grid.Column="1" Margin="15,0">
                                        <TextBlock Text="{Binding Name, FallbackValue='Project Name'}" FontSize="16" FontWeight="Bold" Foreground="#E0F7FF"/>
                                        <TextBlock Text="{Binding Description, FallbackValue=''}" FontSize="12" Foreground="#CCCCCC" 
                                                  TextWrapping="Wrap" Margin="0,5,0,0"
                                                  x:Name="DescriptionText">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="MaxHeight" Value="60"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="MaxHeight" Value="500"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding TypeString, FallbackValue='Other'}" FontSize="11" Foreground="#00D4FF" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding PhaseString, FallbackValue='Planning'}" FontSize="11" Foreground="#4CAF50" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Deadline, StringFormat='{}Due: {0:MMM dd}', FallbackValue='Due: N/A'}" 
                                                      FontSize="11" Foreground="#888888"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding RoadblocksFormatted, FallbackValue=''}" FontSize="11" 
                                                  Foreground="#FF6B6B" Margin="0,3,0,0"
                                                  TextWrapping="Wrap"
                                                  Visibility="{Binding HasRoadblocks, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="MaxHeight" Value="40"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="MaxHeight" Value="200"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Progress Bar -->
                                    <StackPanel Grid.Column="2" Width="150" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CompletionPercentage, StringFormat='{}{0}%', FallbackValue='0%'}" 
                                                  FontSize="12" Foreground="#E0F7FF" HorizontalAlignment="Center"/>
                                        <ProgressBar Value="{Binding CompletionPercentage, Mode=OneWay, FallbackValue=0}" Maximum="100" 
                                                   Height="8" Margin="0,5,0,0"
                                                   Foreground="#4CAF50" Background="#222222"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Border>

</Window>

