<Window x:Class="HouseVictoria.App.Screens.Windows.DataBankManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HouseVictoria.App.Converters"
        mc:Ignorable="d"
        Title="Data Bank Management" Height="900" Width="1400"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3000D4FF" Padding="15,10" CornerRadius="6,6,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <TextBlock Text="ðŸ—„ï¸ Data Bank Management" FontSize="20" FontWeight="Bold" Foreground="#E0F7FF"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Content="âˆ’" 
                               Width="30" Height="30" 
                               Background="#4000D4FF" 
                               BorderThickness="0"
                               FontSize="18" FontWeight="Bold"
                               Foreground="#E0F7FF"
                               Cursor="Hand"
                               Margin="0,0,5,0"
                               Click="MinimizeButton_Click"
                               ToolTip="Minimize to Tray">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6000D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•" 
                               Width="30" Height="30" 
                               Background="#40FF3366" 
                               BorderThickness="0"
                               FontSize="16" FontWeight="Bold"
                               Foreground="#E0F7FF"
                               Cursor="Hand"
                               Click="CloseButton_Click"
                               ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#60FF3366"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Toolbar: Create Button, Search, and Filters -->
            <Border Grid.Row="1" Background="#300A0E27" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search and Refresh -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Foreground="#E0F7FF" Margin="0,0,10,0"/>
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                                Width="250" Margin="0,0,10,0"
                                Background="#252F3F" 
                                BorderBrush="#4000D4FF" 
                                Foreground="#E0F7FF" Padding="8"/>
                        <Button Content="ðŸ”„ Refresh" Style="{StaticResource GlassButton}" 
                               Command="{Binding RefreshCommand}" Width="100"/>
                    </StackPanel>
                    
                    <!-- Create Button -->
                    <Button Grid.Column="1" 
                           Style="{StaticResource GlassButton}"
                           Content="+ Create Data Bank"
                           Command="{Binding CreateDataBankCommand}"/>
                </Grid>
            </Border>

            <!-- Data Banks List -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Data Bank List -->
                <Border Grid.Column="0" BorderBrush="#4000D4FF" BorderThickness="0,0,1,0" Margin="10,10,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Data Banks" FontSize="16" FontWeight="Bold" 
                                  Foreground="#E0F7FF" Margin="0,0,0,10"/>
                        
                        <ScrollViewer Grid.Row="1" Style="{StaticResource ModernScrollViewer}">
                            <ItemsControl ItemsSource="{Binding FilteredDataBanks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource Card}" Margin="0,5" Cursor="Hand"
                                               Tag="{Binding Id, FallbackValue=''}"
                                               MouseLeftButtonDown="DataBankCard_MouseLeftButtonDown">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Name, FallbackValue='Data Bank Name'}" 
                                                              FontSize="14" FontWeight="Bold" Foreground="White"/>
                                                    <TextBlock Text="{Binding Description, FallbackValue=''}" 
                                                              FontSize="11" Foreground="#CCCCCC" 
                                                              TextWrapping="Wrap" Margin="0,2,0,0"
                                                              MaxHeight="40" TextTrimming="CharacterEllipsis"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="{Binding EntryCount, StringFormat='{}Entries: {0}', FallbackValue='Entries: 0'}" 
                                                                  FontSize="10" Foreground="#888888" Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding LastModified, StringFormat='{}Modified: {0:MMM dd}', FallbackValue=''}" 
                                                                  FontSize="10" Foreground="#888888"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Style="{StaticResource GlassButton}" Content="âœï¸" 
                                                           Width="30" Height="30" Margin="2,0"
                                                           Command="{Binding DataContext.EditDataBankCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip="Edit Data Bank"/>
                                                    <Button Style="{StaticResource GlassButton}" Content="ðŸ—‘ï¸" 
                                                           Width="30" Height="30" Margin="2,0"
                                                           Command="{Binding DataContext.DeleteDataBankCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip="Delete Data Bank"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <TextBlock Text="No data banks found. Create a new data bank to get started." 
                                  FontSize="12" Foreground="#888888" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  TextAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilteredDataBanks.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Right: Data Entries for Selected Bank -->
                <Border Grid.Column="1" Margin="10,10,10,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="{Binding SelectedDataBankName, StringFormat='{}Data Entries: {0}', FallbackValue='Select a data bank to view entries'}" 
                                  FontSize="16" FontWeight="Bold" 
                                  Foreground="#E0F7FF" Margin="0,0,0,10"/>
                        
                        <!-- Entry search / filters -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Foreground="#E0F7FF" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding EntrySearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                     Width="220"
                                     Background="#252F3F" 
                                     BorderBrush="#4000D4FF" 
                                     Foreground="#E0F7FF" Padding="8" Margin="0,0,12,0"/>
                            <TextBlock Text="Category:" VerticalAlignment="Center" Foreground="#E0F7FF" Margin="0,0,8,0"/>
                            <ComboBox ItemsSource="{Binding AvailableCategories}"
                                      SelectedItem="{Binding SelectedCategory}"
                                      Width="160" Margin="0,0,12,0"
                                      Background="#252F3F" Foreground="#E0F7FF" BorderBrush="#4000D4FF"/>
                            <TextBlock Text="Min Importance:" VerticalAlignment="Center" Foreground="#E0F7FF" Margin="0,0,8,0"/>
                            <Slider Minimum="0" Maximum="1"
                                    Value="{Binding MinimumImportance, UpdateSourceTrigger=PropertyChanged}"
                                    Width="120" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding MinimumImportance, StringFormat={}{0:F2}}" Foreground="#E0F7FF" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="+ Add Entry" Style="{StaticResource GlassButton}" 
                                   Command="{Binding AddEntryCommand}"
                                   IsEnabled="{Binding HasSelectedDataBank}"/>
                            <Button Content="â¬† Upload Files" Style="{StaticResource GlassButton}"
                                   Margin="5,0,0,0"
                                   Command="{Binding UploadFilesCommand}"
                                   IsEnabled="{Binding HasSelectedDataBank}"/>
                            <Button Content="ðŸ—‘ï¸ Clear All" Style="{StaticResource GlassButton}" 
                                   Margin="5,0,0,0"
                                   Command="{Binding ClearEntriesCommand}"
                                   IsEnabled="{Binding HasSelectedDataBank}"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="3" Style="{StaticResource ModernScrollViewer}">
                            <ItemsControl ItemsSource="{Binding SelectedDataBankEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource Card}" Margin="0,5" Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding Title, FallbackValue='Entry title'}" 
                                                              FontSize="14" FontWeight="Bold" Foreground="White"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                                                        <TextBlock Text="{Binding Category, TargetNullValue='Uncategorized'}" FontSize="11" Foreground="#00D4FF" Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding Importance, StringFormat='{}Imp: {0:F2}'}" FontSize="11" Foreground="#E0F7FF" Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding TagsDisplay}" FontSize="11" Foreground="#CCCCCC" TextTrimming="CharacterEllipsis" MaxWidth="240"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="0" 
                                                              Text="{Binding Content, FallbackValue='Entry content'}" 
                                                              FontSize="12" Foreground="White" 
                                                              TextWrapping="Wrap" MaxHeight="140"/>
                                                    <TextBlock Text="{Binding AttachmentSummary}" FontSize="11" Foreground="#CCCCCC" Margin="0,4,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasAttachment}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding LastModified, StringFormat='{}Updated: {0:MMM dd, HH:mm}'}"
                                                              FontSize="10" Foreground="#888888" Margin="0,6,0,0"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Style="{StaticResource GlassButton}" 
                                                           Content="âœï¸" Width="28" Height="28" Margin="0,0,5,0"
                                                           Command="{Binding DataContext.EditEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip="Edit Entry"/>
                                                    <Button Style="{StaticResource GlassButton}" 
                                                           Content="ðŸ—‘ï¸" Width="28" Height="28"
                                                           Command="{Binding DataContext.RemoveEntryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip="Remove Entry"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <TextBlock Text="No entries in this data bank." 
                                  FontSize="12" Foreground="#888888" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  Grid.Row="3">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedDataBankEntries.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasSelectedDataBank}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>
