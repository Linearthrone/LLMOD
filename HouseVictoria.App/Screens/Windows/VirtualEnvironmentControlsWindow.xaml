<Window x:Class="HouseVictoria.App.Screens.Windows.VirtualEnvironmentControlsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HouseVictoria.App.Converters"
        mc:Ignorable="d"
        Title="Virtual Environment Controls" Height="900" Width="1200"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3000D4FF" Padding="15,10" CornerRadius="6,6,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <TextBlock Text="ðŸŽ® Virtual Environment Controls" FontSize="20" FontWeight="Bold" Foreground="#E0F7FF"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Content="âˆ’" 
                               Width="30" Height="30" 
                               Background="#CC444444" 
                               BorderBrush="#CC666666" 
                               BorderThickness="1"
                               FontSize="18" FontWeight="Bold"
                               Foreground="White"
                               Cursor="Hand"
                               Margin="0,0,5,0"
                               Click="MinimizeButton_Click"
                               ToolTip="Minimize to Tray">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="âœ•" 
                               Width="30" Height="30" 
                               Background="#CCCC0000" 
                               BorderBrush="#CCFF0000" 
                               BorderThickness="1"
                               FontSize="16" FontWeight="Bold"
                               Foreground="White"
                               Cursor="Hand"
                               Click="CloseButton_Click"
                               ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Scene Info and Avatars -->
                <Border Grid.Column="0" BorderBrush="#4000D4FF" BorderThickness="0,0,1,0" Margin="10,10,0,10">
                    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
                        <StackPanel>
                            <!-- Scene Information -->
                            <Border Style="{StaticResource Card}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Scene Information" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding SceneName}" FontSize="14" Foreground="#E0F7FF" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SceneDetails}" FontSize="11" Foreground="#CCB0BEC5" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Avatars List -->
                            <TextBlock Text="Avatars" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,10,0,5"/>
                            <ItemsControl ItemsSource="{Binding Avatars}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource Card}" Margin="0,5" Cursor="Hand"
                                               MouseLeftButtonDown="AvatarCard_MouseLeftButtonDown">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                                <TextBlock Text="{Binding Details}" FontSize="10" Foreground="#CCB0BEC5" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Spawn Avatar Button -->
                            <Button Content="+ Spawn Avatar" Style="{StaticResource GlassButton}" 
                                   Command="{Binding SpawnAvatarCommand}"
                                   Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Right: Controls -->
                <Border Grid.Column="1" Margin="10,10,10,10">
                    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
                        <StackPanel>
                            <TextBlock Text="Avatar Controls" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,10"/>
                            
                            <!-- Selected Avatar Info -->
                            <Border Style="{StaticResource Card}" Margin="0,0,0,15" 
                                   Visibility="{Binding HasSelectedAvatar, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedAvatarName}" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SelectedAvatarId}" FontSize="10" Foreground="#CCB0BEC5"/>
                                </StackPanel>
                            </Border>

                            <!-- Movement Controls -->
                            <TextBlock Text="Movement" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Border Style="{StaticResource Card}" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="X:" Width="30" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding PositionX, UpdateSourceTrigger=PropertyChanged}" 
                                               Background="{StaticResource DarkInputBrush}" Foreground="White" Padding="5" Margin="5,0"/>
                                        <Button Grid.Column="2" Content="Set" Style="{StaticResource GlassButton}" 
                                               Command="{Binding SetPositionCommand}" Width="50" Margin="5,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Y:" Width="30" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding PositionY, UpdateSourceTrigger=PropertyChanged}" 
                                               Background="{StaticResource DarkInputBrush}" Foreground="White" Padding="5" Margin="5,0"/>
                                        <Button Grid.Column="2" Content="Set" Style="{StaticResource GlassButton}" 
                                               Command="{Binding SetPositionCommand}" Width="50" Margin="5,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Z:" Width="30" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding PositionZ, UpdateSourceTrigger=PropertyChanged}" 
                                               Background="{StaticResource DarkInputBrush}" Foreground="White" Padding="5" Margin="5,0"/>
                                        <Button Grid.Column="2" Content="Set" Style="{StaticResource GlassButton}" 
                                               Command="{Binding SetPositionCommand}" Width="50" Margin="5,0,0,0"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Rotation:" Width="60" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding RotationY, UpdateSourceTrigger=PropertyChanged}" 
                                               Background="{StaticResource DarkInputBrush}" Foreground="White" Padding="5" Margin="5,0"/>
                                        <Button Grid.Column="2" Content="Set" Style="{StaticResource GlassButton}" 
                                               Command="{Binding SetRotationCommand}" Width="50" Margin="5,0,0,0"/>
                                    </Grid>
                                    <Button Content="Move Avatar" Style="{StaticResource GlassButton}" 
                                           Command="{Binding MoveAvatarCommand}"
                                           Margin="0,10,0,0"
                                           IsEnabled="{Binding HasSelectedAvatar}"/>
                                </StackPanel>
                            </Border>

                            <!-- Animation Controls -->
                            <TextBlock Text="Animation" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Border Style="{StaticResource Card}" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Animation:" Width="70" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="{Binding AnimationName, UpdateSourceTrigger=PropertyChanged}" 
                                               Background="{StaticResource DarkInputBrush}" Foreground="White" Padding="5" Margin="5,0"/>
                                        <Button Grid.Column="2" Content="Play" Style="{StaticResource GlassButton}" 
                                               Command="{Binding AnimateAvatarCommand}" Width="60" Margin="5,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Pose Controls -->
                            <TextBlock Text="Pose" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                            <Border Style="{StaticResource Card}">
                                <StackPanel>
                                    <Button Content="Update Pose" Style="{StaticResource GlassButton}" 
                                           Command="{Binding UpdatePoseCommand}"
                                           IsEnabled="{Binding HasSelectedAvatar}"
                                           Margin="0,5"/>
                                    <TextBlock Text="Pose controls allow you to set avatar position, rotation, and bone rotations." 
                                             FontSize="10" Foreground="#CCB0BEC5" 
                                             TextWrapping="Wrap" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
