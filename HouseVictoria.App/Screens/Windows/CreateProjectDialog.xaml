<Window x:Class="HouseVictoria.App.Screens.Windows.CreateProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HouseVictoria.App.Converters"
        mc:Ignorable="d"
        Title="Create New Project/Goal" Height="700" Width="800"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Override ComboBox to ensure gray background -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Override DatePicker to ensure gray background -->
        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignDatePicker}">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Calendar styles for DatePicker dark theme -->
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CalendarDayButton">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#B0BEC5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#9575CD"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#673AB7"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsToday" Value="True">
                    <Setter Property="BorderBrush" Value="#673AB7"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CalendarItem">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CalendarButton">
            <Setter Property="Background" Value="#383838"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#673AB7"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Style="{StaticResource GlassPanel}" Background="#CC1a1a2e">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#CCe94560" Padding="15,10">
                <TextBlock Text="ðŸ“‹ Create New Project/Goal" FontSize="18" FontWeight="Bold" Foreground="White"/>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" Padding="20" Style="{StaticResource ModernScrollViewer}">
                <StackPanel>
                    <!-- Name -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Name:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                Foreground="White" Padding="8" Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Type -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Type:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding ProjectTypes}" SelectedItem="{Binding SelectedType}"
                                BorderBrush="#B0BEC5" BorderThickness="1"
                                Foreground="White" Padding="8" Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Description -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Description:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Top" Margin="0,8,0,0"/>
                        <TextBox Grid.Column="1" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                Foreground="White" Padding="8" Margin="10,0,0,0"
                                TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Hidden"
                                Height="80"/>
                    </Grid>

                    <!-- Priority -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Priority:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Slider Minimum="1" Maximum="10" Value="{Binding Priority}" 
                                   TickFrequency="1" IsSnapToTickEnabled="True"
                                   Foreground="#e94560" Background="#CC222222"/>
                            <TextBlock Text="{Binding Priority, StringFormat='Priority: {0}'}" 
                                     Foreground="#CCCCCC" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Start Date -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Start Date:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}"
                                   Style="{StaticResource MaterialDesignDatePicker}"
                                   Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                   Foreground="White" Padding="8" Margin="10,0,0,0" Height="32" VerticalAlignment="Center">
                            <DatePicker.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Grid>

                    <!-- Deadline -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Deadline:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <DatePicker Grid.Column="1" SelectedDate="{Binding Deadline}"
                                   Style="{StaticResource MaterialDesignDatePicker}"
                                   Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                   Foreground="White" Padding="8" Margin="10,0,0,0" Height="32" VerticalAlignment="Center">
                            <DatePicker.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </Grid>

                    <!-- Phase -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Phase:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding ProjectPhases}" SelectedItem="{Binding SelectedPhase}"
                                Style="{StaticResource MaterialDesignComboBox}"
                                Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                Foreground="White" Padding="8" Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Assigned AI -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Assigned AI:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" ItemsSource="{Binding AIContactsWithNone}" SelectedItem="{Binding SelectedAIContact}"
                                DisplayMemberPath="Name" SelectedValuePath="Id"
                                Style="{StaticResource MaterialDesignComboBox}"
                                Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                Foreground="White" Padding="8" Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Roadblocks -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Roadblocks:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Top" Margin="0,8,0,0"/>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding NewRoadblockText, UpdateSourceTrigger=PropertyChanged}" 
                                       Background="{StaticResource DarkInputBrush}" BorderBrush="#B0BEC5" BorderThickness="1"
                                       Foreground="White" Padding="8" Margin="0,0,5,0"/>
                                <Button Grid.Column="1" Style="{StaticResource GlassButton}" Content="Add" 
                                       Command="{Binding AddRoadblockCommand}" Width="80"/>
                            </Grid>
                            <ListBox ItemsSource="{Binding Roadblocks}" 
                                   Background="#CC222222" BorderBrush="#CC444444" 
                                   Foreground="White" Height="100" Margin="0,0,0,5">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding}" Foreground="White" Margin="5"/>
                                            <Button Grid.Column="1" Content="Remove" Style="{StaticResource GlassButton}" 
                                                   Command="{Binding DataContext.RemoveRoadblockCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding}" Width="70" Height="25" Margin="5"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Grid>

                    <!-- Validation Error -->
                    <TextBlock Text="{Binding ValidationError}" 
                             Foreground="#FF6B6B" FontSize="12" 
                             Margin="0,10,0,0"
                             TextWrapping="Wrap"
                             Visibility="{Binding ValidationError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#CC222222" Padding="15,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource GlassButton}" Content="ðŸ’¾ Save" 
                           Width="120" Height="35" Margin="0,0,10,0"
                           Click="SaveButton_Click"/>
                    <Button Style="{StaticResource GlassButton}" Content="âŒ Cancel" 
                           Width="120" Height="35"
                           Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
