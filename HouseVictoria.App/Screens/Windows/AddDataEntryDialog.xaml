<Window x:Class="HouseVictoria.App.Screens.Windows.AddDataEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Data Entry" Height="400" Width="600"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterScreen">
    <Border Style="{StaticResource GlassPanel}" Background="#CC1a1a2e">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#CCe94560" Padding="15,10">
                <TextBlock Text="âž• Add Data Entry" FontSize="18" FontWeight="Bold" Foreground="White"/>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" Padding="20" Style="{StaticResource ModernScrollViewer}">
                <StackPanel>
                    <TextBlock Text="Title:" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                    <TextBox x:Name="TitleTextBox"
                             Background="#CC222222" BorderBrush="#CC444444" 
                             Foreground="White" Padding="8"
                             FontSize="12"/>

                    <TextBlock Text="Category:" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,10,0,6"/>
                    <TextBox x:Name="CategoryTextBox"
                             Background="#CC222222" BorderBrush="#CC444444" 
                             Foreground="White" Padding="8"
                             FontSize="12"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                        <TextBlock Text="Importance:" FontSize="14" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <Slider x:Name="ImportanceSlider" Minimum="0" Maximum="1" Value="0.5" Width="200" Margin="10,0,10,0"/>
                        <TextBlock Text="{Binding Value, ElementName=ImportanceSlider, StringFormat={}{0:F2}}" FontSize="12" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="Tags (comma separated):" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,6"/>
                    <TextBox x:Name="TagsTextBox"
                             Background="#CC222222" BorderBrush="#CC444444" 
                             Foreground="White" Padding="8"
                             FontSize="12"/>

                    <TextBlock Text="Attachment (optional):" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,10,0,6"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Button x:Name="BrowseAttachmentButton"
                                Content="ðŸ“Ž Browse File"
                                Style="{StaticResource GlassButton}"
                                Width="140"
                                Click="BrowseAttachmentButton_Click"/>
                        <Button x:Name="ClearAttachmentButton"
                                Content="Remove"
                                Style="{StaticResource GlassButton}"
                                Width="100"
                                Margin="8,0,0,0"
                                Click="ClearAttachmentButton_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="AttachmentInfoText"
                               Text="No file selected"
                               FontSize="12"
                               Foreground="#CCCCCC"
                               Margin="0,0,0,10"
                               TextWrapping="Wrap"/>

                    <TextBlock Text="Content:" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,10,0,6"/>
                    <TextBox x:Name="EntryTextBox"
                             Background="#CC222222" BorderBrush="#CC444444" 
                             Foreground="White" Padding="10" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Hidden"
                             Height="220"
                             FontFamily="Consolas"
                             FontSize="12"/>
                    <TextBlock Text="Enter the content for this data entry." 
                              FontSize="11" Foreground="#CCCCCC" 
                              Margin="0,10,0,0" 
                              TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="#CC222222" Padding="15,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource GlassButton}" Content="ðŸ’¾ Add" 
                           Width="120" Height="35" Margin="0,0,10,0"
                           Click="AddButton_Click"/>
                    <Button Style="{StaticResource GlassButton}" Content="âŒ Cancel" 
                           Width="120" Height="35"
                           Click="CancelButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
