<Window x:Class="HouseVictoria.App.Screens.Windows.GlobalLogDirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HouseVictoria.App.Converters"
        mc:Ignorable="d"
        Title="Global Log Directory (GLD)" Height="800" Width="1400"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Style="{StaticResource GlassPanel}" Background="#CC1a1a2e">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Close Button -->
        <Border Grid.Row="0" 
                Background="#CCe94560" 
                Padding="15,10"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="ðŸ“‹ Global Log Directory (GLD)"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"/>

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="Refresh"
                            MinWidth="70" Height="28"
                            Background="#4000D4FF"
                            BorderThickness="0"
                            Foreground="#E0F7FF"
                            Margin="0,0,5,0"
                            Click="RefreshButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CC666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="Mark Read"
                            MinWidth="80" Height="28"
                            Background="#4000D4FF"
                            BorderThickness="0"
                            Foreground="#E0F7FF"
                            Margin="5,0,5,0"
                            Click="MarkAllReadButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CC666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Export"
                            MinWidth="60" Height="28"
                            Background="#4000D4FF"
                            BorderThickness="0"
                            Foreground="#E0F7FF"
                            Margin="5,0,5,0"
                            Click="ExportButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CC666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="âˆ’" 
                           Width="30" Height="30" 
                           Background="#CC444444" 
                           BorderBrush="#CC666666" 
                           BorderThickness="1"
                           FontSize="18" FontWeight="Bold"
                           Foreground="White"
                           Cursor="Hand"
                           Margin="5,0,5,0"
                           Click="MinimizeButton_Click"
                           ToolTip="Minimize to Tray">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CC666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="âœ•" 
                           Width="30" Height="30" 
                           Background="#CCCC0000" 
                           BorderBrush="#CCFF0000" 
                           BorderThickness="1"
                           FontSize="16" FontWeight="Bold"
                           Foreground="White"
                            Cursor="Hand"
                           Margin="0,0,0,0"
                           Click="CloseButton_Click"
                           ToolTip="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFFF0000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Split Panel Content -->
        <Grid Grid.Row="1" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView - Left Panel -->
            <Border Grid.Column="0" 
                    Background="#CC16213e" 
                    BorderBrush="#CCe94560" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Margin="5">
                <Grid>
                    <!-- Loading Indicator -->
                    <StackPanel x:Name="LoadingPanel" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Loading logs..." 
                                   Foreground="White" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4"/>
                    </StackPanel>
                    
                    <!-- TreeView -->
                    <TreeView x:Name="LogTreeView"
                              Background="#CC16213e"
                              BorderThickness="0"
                              Foreground="White"
                              FontSize="13"
                              ItemsSource="{Binding Categories}"
                              SelectedItemChanged="LogTreeView_SelectedItemChanged"
                              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                <TextBlock Foreground="Red" 
                                          VerticalAlignment="Center"
                                          Margin="5,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Setter Property="Text" Value="{Binding UnreadCount, StringFormat=' ({0} unread)'}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UnreadCount, Converter={StaticResource BoolToVisibilityConverter}}" Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding TotalCount, StringFormat=' ({0})'}" 
                                          Foreground="#CCB0BEC5" 
                                          VerticalAlignment="Center"
                                          Margin="5,0,0,0"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="True"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#CCe94560"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#CCe94560"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Stretch" 
                         Background="#CCe94560"
                         ShowsPreview="True"/>

            <!-- Log Details - Right Panel -->
            <Border Grid.Column="2" 
                    Background="#CC16213e" 
                    BorderBrush="#CCe94560" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" Style="{StaticResource ModernScrollViewer}">
                    <Grid>
                        <TextBlock x:Name="NoSelectionHint"
                                   Text="Select a log entry to view details"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontStyle="Italic"
                                   Foreground="#CCB0BEC5"/>

                        <Grid x:Name="LogDetailsPanel" Visibility="Collapsed" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Log Title -->
                            <Border Grid.Row="0" 
                                    Background="#CCe94560" 
                                    Padding="10" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,10">
                                <TextBlock x:Name="LogTitle"
                                           Text="Log Title"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>

                            <!-- Log Metadata -->
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="#CC2D2D2D" 
                                        Padding="10" 
                                        Margin="0,0,2,0" 
                                        BorderBrush="#CCe94560" 
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <StackPanel>
                                        <TextBlock Text="Date/Time" FontWeight="Bold" FontSize="11" Foreground="White"/>
                                        <TextBlock x:Name="LogDateTime" Text="2026-01-04 14:32:15" FontSize="12" Foreground="#CCB0BEC5"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" 
                                        Background="#CC2D2D2D" 
                                        Padding="10" 
                                        Margin="2,0,2,0" 
                                        BorderBrush="#CCe94560" 
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <StackPanel>
                                        <TextBlock Text="Severity" FontWeight="Bold" FontSize="11" Foreground="White"/>
                                        <TextBlock x:Name="LogSeverity" Text="Info" FontSize="12" Foreground="#CCB0BEC5"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" 
                                        Background="#CC2D2D2D" 
                                        Padding="10" 
                                        Margin="2,0,0,0" 
                                        BorderBrush="#CCe94560" 
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <StackPanel>
                                        <TextBlock Text="Source" FontWeight="Bold" FontSize="11" Foreground="White"/>
                                        <TextBlock x:Name="LogSource" Text="AI Service" FontSize="12" Foreground="#CCB0BEC5"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Log Tags -->
                            <Border Grid.Row="2" 
                                    Background="#CC2D2D2D" 
                                    Padding="10" 
                                    Margin="0,0,0,10" 
                                    BorderBrush="#CCe94560" 
                                    BorderThickness="1"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Tags" FontWeight="Bold" FontSize="11" Margin="0,0,0,5" Foreground="White"/>
                                    <ItemsControl x:Name="LogTags">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#CCe94560" 
                                                        Padding="8,4" 
                                                        Margin="0,0,5,5" 
                                                        CornerRadius="3">
                                                    <TextBlock Text="{Binding}" 
                                                               Foreground="White" 
                                                               FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Log Summary -->
                            <Border Grid.Row="3" 
                                    Background="#CC673AB7" 
                                    Padding="10" 
                                    Margin="0,0,0,10" 
                                    BorderBrush="#CC9575CD" 
                                    BorderThickness="1"
                                    CornerRadius="3">
                                <StackPanel>
                                    <TextBlock Text="Summary" FontWeight="Bold" FontSize="11" Margin="0,0,0,5" Foreground="White"/>
                                    <TextBlock x:Name="LogSummary" 
                                               Text="This is a summary of the log entry that provides a quick overview of what happened..."
                                               TextWrapping="Wrap"
                                               FontSize="12"
                                               Foreground="#CCEDE7F6"/>
                                </StackPanel>
                            </Border>

                            <!-- Log Content -->
                            <Border Grid.Row="4" 
                                    Background="#CC16213e" 
                                    Padding="10" 
                                    Margin="0,0,0,0" 
                                    BorderBrush="#CCe94560" 
                                    BorderThickness="1"
                                    CornerRadius="3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                               Text="Full Log Content" 
                                               FontWeight="Bold" 
                                               FontSize="11" 
                                               Margin="0,0,0,5"
                                               Foreground="White"/>
                                    
                                    <ScrollViewer Grid.Row="1" 
                                                VerticalScrollBarVisibility="Hidden" 
                                                MaxHeight="300"
                                                Style="{StaticResource ModernScrollViewer}">
                                        <TextBlock x:Name="LogContent"
                                                   Text="Full log content appears here..."
                                                   TextWrapping="Wrap"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Foreground="#CCB0BEC5"/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
    </Border>
</Window>
