<Window x:Class="HouseVictoria.App.Screens.Windows.VideoCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding TitleText}"
        Height="700" Width="1200"
        Style="{StaticResource OverlayWindow}"
        WindowStartupLocation="CenterScreen">
    <Border Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3000D4FF" Padding="15,10" CornerRadius="6,6,0,0" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect Color="#00D4FF" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <TextBlock Text="{Binding TitleText}" FontSize="20" FontWeight="Bold" Foreground="#E0F7FF"/>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button Content="−" 
                               Width="30" Height="30" 
                               Background="#4000D4FF" 
                               BorderThickness="0"
                               FontSize="18" FontWeight="Bold"
                               Foreground="#E0F7FF"
                               Cursor="Hand"
                               Margin="0,0,5,0"
                               Click="MinimizeButton_Click"
                               ToolTip="Minimize to Tray">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#6000D4FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="✕" 
                               Width="30" Height="30" 
                               Background="#40FF3366" 
                               BorderThickness="0"
                               FontSize="16" FontWeight="Bold"
                               Foreground="#E0F7FF"
                               Cursor="Hand"
                               Click="CloseButton_Click"
                               ToolTip="Close">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#60FF3366"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Video Area -->
            <Grid Grid.Row="1" Margin="12">
                <Border Background="#1B2230" CornerRadius="12" BorderBrush="#4000D4FF" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="{Binding RemoteVideoStatusText}"
                                  Foreground="#B0C4DE"
                                  FontSize="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>

                        <!-- Local Preview -->
                        <Border Width="220" Height="140"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="12"
                                Background="#283045"
                                CornerRadius="10"
                                BorderBrush="#4000D4FF"
                                BorderThickness="1">
                            <TextBlock Text="{Binding LocalPreviewStatusText}"
                                      Foreground="#B0C4DE"
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      TextWrapping="Wrap"
                                      Margin="8"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Controls -->
            <Border Grid.Row="2" Background="#300A0E27" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CallStatusText}" Foreground="#E0F7FF" FontSize="14" FontWeight="SemiBold" Margin="0,0,12,0"/>
                        <TextBlock Text="{Binding CallDurationText}" Foreground="#9CC7FF" FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="{Binding MuteButtonText}" Style="{StaticResource GlassButton}" 
                               Width="110" Margin="0,0,8,0"
                               Command="{Binding ToggleMuteCommand}"/>
                        <Button Content="{Binding VideoButtonText}" Style="{StaticResource GlassButton}" 
                               Width="110" Margin="0,0,8,0"
                               Command="{Binding ToggleVideoCommand}"/>
                        <Button Content="{Binding SpeakerButtonText}" Style="{StaticResource GlassButton}" 
                               Width="120" Margin="0,0,8,0"
                               Command="{Binding ToggleSpeakerCommand}"/>
                        <Button Content="Hang Up" Style="{StaticResource GlassButton}" 
                               Width="110"
                               Command="{Binding HangUpCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
