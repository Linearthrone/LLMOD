<Window x:Class="HouseVictoria.App.Screens.Windows.SMSMMSWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:HouseVictoria.App.Converters"
        mc:Ignorable="d"
        Title="Messages" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:IncomingToAlignmentConverter x:Key="IncomingToAlignmentConverter"/>
        <converters:MessageTypeVisibilityConverter x:Key="MessageTypeVisibilityConverter"/>
        <converters:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter"/>
        <converters:MessageToImageSourceConverter x:Key="MessageToImageSourceConverter"/>
        <converters:CallStateToTextConverter x:Key="CallStateToTextConverter"/>
    </Window.Resources>

    <!-- Resize Border - Invisible but allows resizing -->
    <Border x:Name="ResizeBorder" 
            Background="Transparent"
            BorderThickness="8"
            BorderBrush="Transparent">
        <!-- Galaxy S23 Phone Frame -->
        <Border x:Name="PhoneFrame" 
                Background="{StaticResource DarkCardBrush}"
                CornerRadius="40"
                BorderThickness="8"
                BorderBrush="{StaticResource DarkSurfaceBrush}"
                Padding="8">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="10" Opacity="0.8"/>
            </Border.Effect>
            
            <!-- Inner Screen Container -->
            <Border Background="{StaticResource DarkBackgroundBrush}" CornerRadius="32" ClipToBounds="True">
            
            <!-- Top Notch/Punch Hole Area -->
        <Grid>
            <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Drag Area - Transparent top bar for dragging -->
                <Border Grid.Row="0" Background="Transparent" 
                        MouseLeftButtonDown="TopBar_MouseLeftButtonDown"
                        Cursor="SizeAll"/>

                <!-- Status Bar / Notch Area -->
                <Border Grid.Row="0" Background="{StaticResource DarkCardBrush}" HorizontalAlignment="Center" 
                        Width="120" Height="28" CornerRadius="14" Margin="0,2,0,0"
                        IsHitTestVisible="False">
                    <!-- Punch hole camera -->
                    <Ellipse Width="24" Height="24" Fill="{StaticResource DarkBackgroundBrush}" 
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Apps View -->
                <Grid Grid.Row="2" Visibility="{Binding ShowAppsView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource DarkCardBrush}" Padding="16,12" Margin="0,0,0,1">
                        <TextBlock Text="Apps" 
                                  Foreground="{StaticResource TextPrimaryBrush}" FontSize="24" FontWeight="Bold" 
                                  VerticalAlignment="Center"/>
                    </Border>

                    <!-- Apps Grid -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <UniformGrid Columns="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
                            <!-- Messages App -->
                            <Button Command="{Binding OpenMessagesAppCommand}"
                                   Background="Transparent" 
                                   BorderThickness="0"
                                   Padding="20"
                                   Margin="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{StaticResource DarkCardBrush}" 
                                                           CornerRadius="20"
                                                           Padding="{TemplateBinding Padding}"
                                                           Margin="{TemplateBinding Margin}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel>
                                    <TextBlock Text="ðŸ’¬" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Messages" 
                                              Foreground="{StaticResource TextPrimaryBrush}" 
                                              FontSize="16" FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Phone App -->
                            <Button Command="{Binding OpenPhoneAppCommand}"
                                   Background="Transparent" 
                                   BorderThickness="0"
                                   Padding="20"
                                   Margin="10"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{StaticResource DarkCardBrush}" 
                                                           CornerRadius="20"
                                                           Padding="{TemplateBinding Padding}"
                                                           Margin="{TemplateBinding Margin}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel>
                                    <TextBlock Text="ðŸ“ž" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Phone" 
                                              Foreground="{StaticResource TextPrimaryBrush}" 
                                              FontSize="16" FontWeight="SemiBold"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </UniformGrid>
                    </ScrollViewer>
                </Grid>

                <!-- Dialer View -->
                <Grid Grid.Row="2" Visibility="{Binding ShowDialerView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource DarkCardBrush}" Padding="16,12" Margin="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="â†" FontSize="20" 
                                   Background="Transparent" BorderThickness="0" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Padding="8,0" Margin="0,0,12,0"
                                   Command="{Binding BackFromDialerCommand}"/>
                            <TextBlock Grid.Column="1" Text="Phone" 
                                      Foreground="{StaticResource TextPrimaryBrush}" FontSize="20" FontWeight="Bold" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Contact Selection or Call View -->
                    <Grid Grid.Row="1">
                        <!-- Contact Selection -->
                        <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                    Visibility="{Binding IsDialerContactSelected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                            <ItemsControl ItemsSource="{Binding Contacts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.SelectDialerContactCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Background="Transparent" 
                                               BorderThickness="0"
                                               Padding="16,12"
                                               Margin="0,0,0,1"
                                               HorizontalContentAlignment="Stretch"
                                               HorizontalAlignment="Stretch">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="{StaticResource DarkCardBrush}"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                       Padding="{TemplateBinding Padding}"
                                                                       Margin="{TemplateBinding Margin}">
                                                                    <ContentPresenter HorizontalAlignment="Stretch"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Avatar -->
                                                <Ellipse Grid.Column="0" Width="50" Height="50" 
                                                        Fill="{StaticResource PrimaryBrush}" Margin="0,0,12,0">
                                                    <Ellipse.Clip>
                                                        <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                                    </Ellipse.Clip>
                                                </Ellipse>
                                                
                                                <!-- Contact Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                              Foreground="{StaticResource TextPrimaryBrush}" FontSize="16" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Type}" 
                                                              Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" 
                                                              Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Call View (when contact is selected) -->
                        <Grid Visibility="{Binding IsDialerContactSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                              VerticalAlignment="Center">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Contact Avatar -->
                                <Ellipse Width="120" Height="120" 
                                        Fill="{StaticResource PrimaryBrush}" 
                                        Margin="0,0,0,24"
                                        HorizontalAlignment="Center">
                                    <Ellipse.Clip>
                                        <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60"/>
                                    </Ellipse.Clip>
                                </Ellipse>
                                
                                <!-- Contact Name -->
                                <TextBlock Text="{Binding SelectedDialerContact.Name}" 
                                          Foreground="{StaticResource TextPrimaryBrush}" 
                                          FontSize="24" FontWeight="Bold"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                
                                <!-- Call Status -->
                                <TextBlock Text="{Binding CurrentCallState, Converter={StaticResource CallStateToTextConverter}}" 
                                          Foreground="{StaticResource TextSecondaryBrush}" 
                                          FontSize="16"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,40"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Phone Buttons -->
                    <Border Grid.Row="2" Background="{StaticResource DarkCardBrush}" Padding="16,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Start Call Button (Green) -->
                            <Button Grid.Column="1" 
                                   Width="70" Height="70"
                                   Background="{StaticResource SuccessBrush}" 
                                   BorderThickness="0"
                                   Command="{Binding StartDialerCallCommand}"
                                   ToolTip="Start Call"
                                   Visibility="{Binding CanStartDialerCall, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Margin="0,0,20,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           CornerRadius="35"
                                                           Width="70" Height="70">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#22C55E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="ðŸ“ž" 
                                          FontSize="32" 
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Button>
                            
                            <!-- End Call Button (Red) -->
                            <Button Grid.Column="2" 
                                   Width="70" Height="70"
                                   Background="{StaticResource ErrorBrush}" 
                                   BorderThickness="0"
                                   Command="{Binding EndDialerCallCommand}"
                                   ToolTip="End Call"
                                   Visibility="{Binding CanEndDialerCall, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           CornerRadius="35"
                                                           Width="70" Height="70">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DC2626"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="ðŸ“µ" 
                                          FontSize="32" 
                                          Foreground="White"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Conversation List View -->
                <Grid Grid.Row="2" Visibility="{Binding ShowConversationList, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Row="0" Background="{StaticResource DarkCardBrush}" Padding="16,12" Margin="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Messages" 
                                      Foreground="{StaticResource TextPrimaryBrush}" FontSize="24" FontWeight="Bold" 
                                      VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <Border Grid.Column="1" Background="{StaticResource DarkInputBrush}" CornerRadius="20" Padding="12,8">
                                <TextBlock Text="Search" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" VerticalAlignment="Center"/>
                            </Border>
                            <Button Grid.Column="2" Content="âœš" FontSize="24" 
                                   Background="{StaticResource PrimaryBrush}" BorderThickness="0" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Width="40" Height="40" 
                                   Margin="12,0,0,0"
                                   Command="{Binding StartNewConversationCommand}"
                                   ToolTip="Start New Conversation">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           CornerRadius="20"
                                                           Width="40" Height="40">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                         VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Conversations List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding Conversations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SelectConversationCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                           CommandParameter="{Binding}"
                                           Background="Transparent" 
                                           BorderThickness="0"
                                           Padding="16,12"
                                           Margin="0,0,0,1"
                                           HorizontalContentAlignment="Stretch"
                                           HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="{StaticResource DarkCardBrush}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                   Padding="{TemplateBinding Padding}"
                                                                   Margin="{TemplateBinding Margin}">
                                                                <ContentPresenter HorizontalAlignment="Stretch"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar -->
                                            <Ellipse Grid.Column="0" Width="50" Height="50" 
                                                    Fill="{StaticResource PrimaryBrush}" Margin="0,0,12,0">
                                                <Ellipse.Clip>
                                                    <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                                </Ellipse.Clip>
                                            </Ellipse>
                                            
                                            <!-- Contact Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                          Foreground="{StaticResource TextPrimaryBrush}" FontSize="16" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding LastMessagePreview}" 
                                                          Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" 
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>
                                            
                                            <!-- Time -->
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding LastMessageAt, StringFormat='{}{0:HH:mm}'}" 
                                                      Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" 
                                                      VerticalAlignment="Top" Margin="12,0,0,0"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- Contact Selection View -->
                <Grid Grid.Row="2" Visibility="{Binding ShowContactSelection, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource DarkCardBrush}" Padding="16,12" Margin="0,0,0,1">
                <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="â†" FontSize="20" 
                                   Background="Transparent" BorderThickness="0" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Padding="8,0" Margin="0,0,12,0"
                                   Command="{Binding BackToConversationListCommand}"/>
                            <TextBlock Grid.Column="1" Text="Select Contact" 
                                      Foreground="{StaticResource TextPrimaryBrush}" FontSize="20" FontWeight="Bold" 
                                      VerticalAlignment="Center"/>
                </Grid>
            </Border>

                    <!-- Contacts List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding Contacts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.SelectContactCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                           CommandParameter="{Binding}"
                                           Background="Transparent" 
                                           BorderThickness="0"
                                           Padding="16,12"
                                           Margin="0,0,0,1"
                                           HorizontalContentAlignment="Stretch"
                                           HorizontalAlignment="Stretch">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="{StaticResource DarkCardBrush}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                   Padding="{TemplateBinding Padding}"
                                                                   Margin="{TemplateBinding Margin}">
                                                                <ContentPresenter HorizontalAlignment="Stretch"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar -->
                                            <Ellipse Grid.Column="0" Width="50" Height="50" 
                                                    Fill="{StaticResource PrimaryBrush}" Margin="0,0,12,0">
                                                <Ellipse.Clip>
                                                    <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
                                                </Ellipse.Clip>
                                            </Ellipse>
                                            
                                            <!-- Contact Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                          Foreground="{StaticResource TextPrimaryBrush}" FontSize="16" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Type}" 
                                                          Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" 
                                                          Margin="0,2,0,0"/>
            </StackPanel>

                                            <!-- Type Indicator -->
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Type, Converter={StaticResource BoolToVisibilityConverter}}" 
                                                      Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" 
                                                      VerticalAlignment="Center" Margin="12,0,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value=""/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Type}" Value="AI">
                                                                <Setter Property="Text" Value="ðŸ¤–"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- Message View -->
                <Grid Grid.Row="2" Visibility="{Binding ShowMessageView, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Message Header -->
                    <Border Grid.Row="0" Background="{StaticResource DarkCardBrush}" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" Content="â†" FontSize="20" 
                                   Background="Transparent" BorderThickness="0" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Padding="8,0" Margin="0,0,12,0"
                                   Command="{Binding BackToConversationListCommand}"/>
                            
                            <TextBlock Grid.Column="1" Text="Contact" 
                                      Foreground="{StaticResource TextPrimaryBrush}" FontSize="18" FontWeight="SemiBold" 
                                      VerticalAlignment="Center"/>
                        </Grid> 
                    </Border>

                    <!-- Messages -->
                    <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                                 Padding="12,8" Background="{StaticResource DarkBackgroundBrush}">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Incoming Message -->
                                        <Border Grid.Column="0" Grid.ColumnSpan="2"
                                               HorizontalAlignment="{Binding Direction, Converter={StaticResource IncomingToAlignmentConverter}}"
                                               MaxWidth="280"
                                               Padding="12,8"
                                               CornerRadius="18"
                                               Margin="12,0,12,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource DarkInputBrush}"/>
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Setter Property="Margin" Value="12,0,60,0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Direction}" Value="Outgoing">
                                                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                                            <Setter Property="Margin" Value="60,0,12,0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel>
                                        <!-- Image Preview -->
                                        <Border Background="#33000000" CornerRadius="8" 
                                               Margin="0,0,0,8" MaxWidth="250" MaxHeight="200"
                                               Visibility="{Binding Type, Converter={StaticResource MessageTypeVisibilityConverter}, ConverterParameter=Image}"
                                               Padding="4"
                                               Cursor="Hand"
                                               MouseLeftButtonDown="MediaPreview_MouseLeftButtonDown"
                                               ToolTip="Click to open full size">
                                            <Image Source="{Binding Path=., Converter={StaticResource MessageToImageSourceConverter}}"
                                                  Stretch="Uniform" 
                                                  MaxWidth="250" MaxHeight="200"/>
                                        </Border>
                                        
                                        <!-- Video Preview Placeholder -->
                                        <Border Background="#33000000" CornerRadius="8" 
                                               Margin="0,0,0,8" MinWidth="250" MinHeight="150"
                                               Visibility="{Binding Type, Converter={StaticResource MessageTypeVisibilityConverter}, ConverterParameter=Video}"
                                               Padding="8"
