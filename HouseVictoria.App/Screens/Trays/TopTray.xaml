<UserControl x:Class="HouseVictoria.App.Screens.Trays.TopTray"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="1400">

    <Border Style="{StaticResource GlassTrayContainer}" Width="1400" Height="100">
        <Grid>
            <!-- Subtle light refraction glow -->
            <Border Style="{StaticResource RefractionGlow}"/>
            <!-- Content -->
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Drag and Drop Box - Centered -->
                <Border Grid.Column="1"
                        Width="300"
                        Height="80"
                        AllowDrop="True"
                        Drop="DataBankBox_Drop"
                        DragEnter="DataBankBox_DragEnter"
                        DragLeave="DataBankBox_DragLeave"
                        HorizontalAlignment="Center"
                        Background="#404040"
                        BorderThickness="1"
                        BorderBrush="#505050"
                        CornerRadius="8"
                        Padding="15"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#404040"/>
                            <Setter Property="BorderBrush" Value="#505050"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#606060"/>
                                    <Setter Property="BorderBrush" Value="#707070"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="ðŸ“ Drop Context Data Here"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#B0B0B0"
                               FontStyle="Italic"
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- File Retrieval Button -->
                <Button Grid.Column="2"
                        Style="{StaticResource FrostedGlassButton}"
                        ToolTip="File Retrieval"
                        x:Name="FileRetrievalButton"
                        Click="FileRetrievalButton_Click"
                        Margin="10,0,5,0">
                    <TextBlock Text="ðŸ“¥" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <!-- Global Log Directory Button -->
                <Button Grid.Column="3"
                        Style="{StaticResource FrostedGlassButton}"
                        ToolTip="Global Log Directory"
                        x:Name="GLDButton"
                        Click="GLDButton_Click"
                        Margin="5,0,5,0">
                    <TextBlock Text="ðŸ“‹" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <!-- Projects Button -->
                <Button Grid.Column="4"
                        Style="{StaticResource FrostedGlassButton}"
                        ToolTip="Open Projects Board"
                        Command="{Binding OpenProjectsCommand}"
                        Margin="5,0,5,0">
                    <TextBlock Text="ðŸ“Š" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <!-- Data Bank Management Button -->
                <Button Grid.Column="5"
                        Style="{StaticResource FrostedGlassButton}"
                        ToolTip="Data Bank Management"
                        Command="{Binding OpenDataBankManagementCommand}"
                        Margin="5,0,10,0">
                    <TextBlock Text="ðŸ—„ï¸" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Grid>
    </Border>

</UserControl>
